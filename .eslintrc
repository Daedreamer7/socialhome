{
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended"
  ],
  "rules": {
    "arrow-parens": ["error", "as-needed"],
    "indent": ["error", 4, {"SwitchCase": 1}],
    "import/extensions": "off",
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "max-len": ["error", 120],
    "object-curly-spacing": ["error", "never"],
    "quotes": ["warn", "double"],
    "semi": ["error", "never"]
  },
  "globals": {
    "Urls": true,
    "gettext": true,
    "interpolate": true,
    "ngettext": true
  }
}
